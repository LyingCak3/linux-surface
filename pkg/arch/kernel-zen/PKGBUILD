pkgbase=linux-zen-surface
pkgver=6.12.8.zen1
pkgrel=1
pkgdesc='Linux ZEN with Microsoft Surface patch set'
_shortver=${pkgver%.*}
_fullver=${pkgver%.*}-${pkgver##*.}
_srctag=v${_fullver}
url='https://github.com/zen-kernel/zen-kernel'
arch=(x86_64)
license=(GPL2)
makedepends=(
  bc
  cpio
  gettext
  libelf
  perl
  python
  tar
  xz
  # we don't need `pahole` as deps because we disable `CONFIG_DEBUG_INFO`
  # ignoring deps for docs because we don't build docs package
)
optdepends=('iptsd: Touchscreen support'
            'linux-firmware: Firmware files for Linux'
            'linux-firmware-marvell: Firmware files for Marvell WiFi / Bluetooth')
options=('!strip')
_srcname=linux-${pkgver%.*}
_srctag=v${pkgver%.*}-${pkgver##*.}
_surface_root="../kernel"
source=(
  https://cdn.kernel.org/pub/linux/kernel/v${pkgver%%.*}.x/${_srcname}.tar.{xz,sign}
  $url/releases/download/$_srctag/linux-$_srctag.patch.zst{,.sig}

  arch.config::https://gitlab.archlinux.org/api/v4/projects/42705/repository/files/config/raw?ref=${pkgver}-1
  surface.config::file://$(realpath ${_surface_root}/surface.config) # surface specific options
)
for patch in ${_surface_root}/*.patch; do
  source+=(file://$(realpath ${patch}))
  :
done
validpgpkeys=(
